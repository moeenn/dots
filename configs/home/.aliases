os='debian'

case $os in
	debian)
		alias update='sudo apt-get update'
		alias search='apt-cache search'
		alias install='sudo apt-get install -y'
		alias remove='sudo apt-get remove'
		alias upgrade='sudo apt-get upgrade -y'
		alias purge_config='sudo dpkg --purge $(dpkg --get-selections | grep deinstall | cut -f1 )'
		alias autoremove='sudo apt-get autoremove && purge_config'
		alias clean='sudo apt-get autoclean; sudo apt-get clean'
	;;

	fedora)
		alias update='sudo dnf update'
		alias search='dnf search'
		alias install='sudo dnf install -y'
		alias remove='sudo dnf remove'
	;;
esac

# Operations
alias ..='cd ..'
alias cp='cp -v'
alias mv='mv -iv'
alias rsync='rsync -avP'
alias rm='rm -iv'
alias link='ln -s -r'
alias ls='ls -p --color=always'
alias lsa='ls -lpa | column -t'
alias :q='exit'

# Programs
alias load='htop -u moeenn'
alias df='dfc -f -s'
alias time='tty-clock -cb -C 6'
alias uptime='uptime -p'
alias axel='axel -n 3'
alias extract='dtrx -v'
alias m='mpv'
alias net='bwm-ng -t 1000'
alias lsblk='lsblk -e 7'
alias find='find -iname'
alias c='codium'
alias v='vim'
alias patch='patch -p1 < '

# Super User Tasks
alias poweroff='sudo poweroff'
alias reboot='sudo reboot'
alias kill='killall -v --ignore-case'
alias full_access='sudo chmod -R a+rw ./'

# n = delay second
# d = difference
alias watch='watch -ct -n 1 -d'

# tmux
alias t='tmux'
alias att='tmux attach -t default'

# git
alias :s='git status'
alias ga='git add'
alias :c='git commit -m'
alias pull='git pull origin main --allow-unrelated-histories'
alias push='git push origin'
# drop un-commited local changes
alias checkout='git checkout .'
# drop commited local changes
alias reset='git reset'

# programming
alias dc='sudo docker-compose'
alias laraclear='php artisan config:clear; php artisan cache:clear; php artisan view:clear; php artisan route:clear; composer dump-autoload'
