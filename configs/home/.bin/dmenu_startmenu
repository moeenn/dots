#! /bin/bash

actions="flatpak run org.chromium.Chromium
firefox
xfce4-terminal
thunar
subl
flatpak run com.bitwarden.desktop
flatpak run rest.insomnia.Insomnia
filezilla
remmina"
result=$(echo "$actions" | dmenu -l 9 -h 30 -w 500 -x 433 -y 234)
cmd=$(echo "$result")
[ -n "$cmd" ] && eval setsid setsid "$cmd"
