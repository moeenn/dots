!! General settings
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.hintstyle: hintfull
Xft.dpi:       120

!! XTerm config
xterm*font: xft:JetBrains Mono:style=Regular:size=10 
*.scaleHeight: 1.5

!! URXVT config
URxvt.font: xft:JetBrains Mono:style=Regular:size=10
URxvt.geometry: 110x20
URxvt.letterSpace: -1
URxvt.lineSpace: 8
URxvt.scrollBar: false
URxvt.internalBorder: 24
URxvt.cursorUnderline: true
XTerm*allowBoldFonts: false

!! Common Keybinds for Navigations
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D

!! Colorscheme
*.background: #252525
*.foreground: #CCCCCC
*.cursorColor: #FEA63C

!black
*color0: #404040
*color8: #606060
!red
*color1: #E84F4F
*color9: #D23D3D
!green
*color2: #B7CE42
*color10: #BDE077
!yellow
*color3: #FEA63C
*color11: #FFE863
!blue
*color4: #66AABB
*color12: #AACCBB
!magenta
*color5: #B7416E
*color13: #E16A98
!cyan
*color6: #6D878D
*color14: #42717B
!white
*color7: #DDDDDD
*color15: #CCCCCC
